[Unit]
Description=Zurmo MySQL Database
After=docker.service
Requires=docker.service
Before=zurmo_mysql_cluster_discovery_nodes@%i.service
Before=zurmo_log_courier_mysql@%i.service
Requires=zurmo_mysql_cluster_discovery_nodes@%i.service
Requires=zurmo_log_courier_mysql@%i.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=0
KillMode=none
Restart=always
ExecStartPre=-/usr/bin/docker kill zurmo_mysql_cluster.%i
ExecStartPre=-/usr/bin/docker rm zurmo_mysql_cluster.%i
#ExecStartPre=/usr/bin/docker pull oezs/zurmo_mysql_cluster:${DOCKER_IMAGE_TAG}
ExecStart=/usr/bin/docker run --name zurmo_mysql_cluster.%i -p %i:3306 oezs/zurmo_mysq_cluster:${DOCKER_IMAGE_TAG}
ExecStop=/usr/bin/docker stop zurmo_mysql_cluster.%i
